<!DOCTYPE html>
<html>
  <head>
    <title>Filmapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="hero is-info is-large">
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
      <div class="hero-head">
        <nav class="navbar">
          <div class="container">
            <div class="navbar-brand">
              <a class="navbar-item">
                <img src="https://bulma.io/images/bulma-type-white.png" alt="Logo">
              </a>
              <span class="navbar-burger burger" data-target="navbarMenuHeroB">
                <span></span>
                <span></span>
                <span></span>
              </span>
            </div>
            <div id="navbarMenuHeroB" class="navbar-menu">
              <div class="navbar-end">                
                <%= link_to 'Home', root_path, class: 'navbar-item' %>                
                <a class="navbar-item">
                  Examples
                </a>
                <a class="navbar-item">
                  Documentation
                </a>
                <span class="navbar-item">
                  <% if current_user %>

                      <%= link_to 'Sign Out', destroy_user_session_path, class: 'button is-danger', method: :delete %>                                            

                  <% else %>

                      <%= link_to 'Login', new_user_session_path, class: 'button is-info is-inverted' %>
                      <span class="navbar-item">                     
                          <%= link_to 'Sign Up', new_user_registration_path, class: 'button is-success' %>
                      </span>                       

                  <% end %>
                </span>                
              </div>
            </div>
          </div>
        </nav>
      </div>

      <div class="hero-body">
        <div class="container has-text-centered">
          <p class="title">
            <%= yield :page_title %>
          </p>
          <p class="subtitle">
            <%= yield :page_subtitle %>
          </p>
        </div>
      </div>
  </section>    
  <%= yield %>

  </body>
</html>
