<% content_for :page_title, "Login" %>

<section class="section">

  <div class="container">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="control">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "input" },
                        wrapper: false %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: "input" },
                        wrapper: false %>
        </div>
        <div class="field">
          <%= f.input :remember_me, wrapper: false, class: "checkbox", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Login", class: "button is-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

  </div>

</section>


